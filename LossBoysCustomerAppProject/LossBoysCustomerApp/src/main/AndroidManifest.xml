<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lossboys.customerapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.lossboys.customerapp.CustomerHome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name="com.lossboys.customerapp.CustomerLogin"
                android:label="@string/login_title"
                android:parentActivityName="com.lossboys.customerapp">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lossboys.customerapp.CustomerHome" />
        </activity>

    </application>

</manifest>
